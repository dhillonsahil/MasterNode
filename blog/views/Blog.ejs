<!DOCTYPE html>
<html lang="en">
<body>
    <head>
        <title>Blog App</title>
        <%- include('./partials/head') %>
    </head>
    <style>
      re {
    white-space: pre-wrap; /* Since CSS 2.1 */
    white-space: -moz-pre-wrap; /* Mozilla, since 1999 */
    white-space: -pre-wrap; /* Opera 4-6 */
    white-space: -o-pre-wrap; /* Opera 7 */
    word-wrap: break-word; /* Internet Explorer 5.5+ */
}
      </style>
    <%- include('./partials/navbar') %>

    <div class="container mt-4">
        <h1 class="text-center text-capitalize "> <%- blog.title %></h1>
        <img src="<%- blog.coverImageUrl %>" width="700px">
        <!-- <img src="<%- blog.coverImageUrl %>" class="img-fluid" alt="Responsive image"> -->
        <div class="content-container">
            <pre class="content-container"><%- blog.content %></pre>
          </div>
    </div>

    <div class="container mt-4">
      <img src="<%- blog.createdBy.profileImageURL %>" width="50px" /> <%= blog.createdBy.fullName %>
    </div>

    
    <div class="container">
      <h1>Comments  - <%= comments.length %></h1>
      <div class="mt-3">
        <% if (locals.comments) { %>
          <% comments.forEach(comment => { %>
            <img src="<%- comment.createdBy.profileImageURL %>" width="50px" /> <%= comment.createdBy.fullName %>
           <pre><%= comment.content %>  <%= comment.createdBy.fullName %></pre>
          <% }) %>
        <% } %>
      </div>
      <% if (locals.user) { %>
       
      <form action="/blog/comment/<%=blog._id%>" method="post">
         
        <div class="mb-3">
          <label for="content" class="form-label">Add Comment</label>
          <input type="text" name="content" class="form-control" id="password">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
      <% } %>
  </div>

    <%- include('./partials/scripts') %>
</body>
</html>